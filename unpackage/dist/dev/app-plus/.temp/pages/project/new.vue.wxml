<template name="5373d6fc">
  <view class="_view data-v-5ece8d6f content">
    <view class="_view data-v-5ece8d6f project_new_wrap">
      <view class="_view data-v-5ece8d6f new_title" bindinput="handleProxy" data-eventid="{{'0'}}" data-comkey="{{$k}}">请输入项目名称：</view>
      <input class="_input data-v-5ece8d6f new_title_input" placeholder="项目名称" maxlength="10" />
      <view class="_view data-v-5ece8d6f new_title">归入项目组：</view>
