        <view bindtap="handleProxy" class="_view data-v-5ece8d6f new_classify_item" wx:key="index" key="{{index}}" data-eventid="{{'1-'+index}}" data-comkey="{{$k}}" wx:for="{{classify_list}}" wx:for-index="index" wx:for-item="item" style=" {{('background-color:' + (item == classify ? '#ccc' : '#eee') + ';')}}">{{item}}</view>
