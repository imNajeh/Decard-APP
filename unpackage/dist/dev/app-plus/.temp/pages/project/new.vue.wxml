        <view bindtap="handleProxy" class="_view data-v-5ece8d6f project_new_color" wx:key="index" key="{{index}}" data-eventid="{{'3-'+index}}" data-comkey="{{$k}}" wx:for="{{card_color}}" wx:for-index="index" wx:for-item="item" style=" {{(  'background-color:' +  item +  ';' +  'border-color:' +  (item == color ? '#888' : '#eee') +  ';')}}"></view>
      </view>
    </view>
  </view>
</template>