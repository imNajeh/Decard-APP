
.content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.focus_wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  padding: 20rpx 40rpx;
}
.focus_card {
  width: 670rpx;
  height: 1100rpx;
  border-radius: 40rpx;
  background-color: #A6CAF1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.focus_card .title {
  font-size: 68rpx;
  padding-top: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
}
.circle {
  width: 470rpx;
  height: 470rpx;
  border-radius: 50%;
  border: 5rpx solid #FFFFFF;
  background-color: #A6CAF1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  color: #FFFFFF;
  font-size: 68rpx;
  font-weight: 700;
}
.dot {
  -webkit-animation: sploosh 1.5s infinite;
  animation: sploosh 1.5s infinite;
}
@-webkit-keyframes sploosh {
0% {
    box-shadow: 0 0 0 0rpx rgba(255, 255, 255, 0.7);
}
100% {
    box-shadow: 0 0 0 40rpx rgba(255, 255, 255, 0);
}
}
@keyframes sploosh {
0% {
    box-shadow: 0 0 0 0rpx rgba(255, 255, 255, 0.7);
}
100% {
    box-shadow: 0 0 0 40rpx rgba(255, 255, 255, 0);
}
}
.focus_card .counter {
  font-size: 50rpx;
  font-weight: 700;
  color: #FFFFFF;
}
.focus_card .btn_wrap {
  padding-bottom: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #777777;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
}
.focus_card .btn_wrap .btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  margin: 20rpx;
  border: 1rpx solid #FFFFFF;
  font-size: 40rpx;
  padding: 20rpx;
  width: 140rpx;
  height: 50rpx;
  background-color: #FFFFFF;
  box-shadow: 6rpx 6rpx 5rpx #ddd;
  border-radius: 40rpx;
}